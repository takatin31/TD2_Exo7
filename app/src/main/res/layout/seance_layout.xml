<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/item_back"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/moduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="TDM2"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moduleTitle"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/heurDtitle"
        android:text="02/05/2020"
        android:textColor="#2E2E2E"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/heurDtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moduleTitle"
        android:layout_toStartOf="@id/textView7"
        android:text="13:00"
        android:textColor="#3D3D3D"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moduleTitle"
        android:layout_toStartOf="@id/heureFTitle"
        android:text=" - "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/heureFTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moduleTitle"
        android:layout_alignParentEnd="true"
        android:text="15:00"
        android:textColor="#414141"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/salleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateTitle"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/EnsTitle"
        android:text="DPGR"
        android:textColor="#161616"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/EnsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heureFTitle"
        android:layout_alignParentEnd="true"
        android:text="Mr.Mostefai"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>